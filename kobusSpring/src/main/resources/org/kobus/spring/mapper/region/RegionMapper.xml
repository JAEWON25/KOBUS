<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.kobus.spring.mapper.region.RegionMapper">

    <!-- 전체 지역 목록 조회 -->
    <select id="selectAll" resultType="org.kobus.spring.domain.region.RegionDTO">
        SELECT regID, regName, sidoCode
        FROM region
        ORDER BY regName ASC
    </select>

    <!-- 시도코드로 지역 목록 조회 -->
    <select id="selectBySidoCode" parameterType="int" resultType="org.kobus.spring.domain.region.RegionDTO">
        SELECT regID, regName, sidoCode
        FROM region
        WHERE sidoCode = #{sidoCode}
    </select>

</mapper>