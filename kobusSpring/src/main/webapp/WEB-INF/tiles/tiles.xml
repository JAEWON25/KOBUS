<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC 
	"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
	"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
	
<tiles-definitions>
  
    <definition name="kobus.*/*"  template="/WEB-INF/views/inc/layout.jsp">
        <put-attribute name="header"  value="/WEB-INF/views/inc/header.jsp" />
        <put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" /> 
        <put-attribute name="footer"  value="/WEB-INF/views/inc/footer.jsp" />
        <put-attribute name="script"  value="/WEB-INF/views/inc/script.jsp" />
        
        <put-attribute name="pageScript" value="/WEB-INF/views/{1}/personalScript.jsp" />
        
        <put-attribute name="title"  value="SiSt5 Spring Tiles" />
    </definition>
    
    <!-- [1] 게시판 용 Tiles 정의 -->
    <definition name="kobus.board/*" template="/WEB-INF/views/inc/layout.jsp">
        <put-attribute name="header" value="/WEB-INF/views/inc/header.jsp" />
        <put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
        <put-attribute name="script" value="/WEB-INF/views/inc/script.jsp" />
        <put-attribute name="pageScript" value="/WEB-INF/views/board/personalScript.jsp" />
        <put-attribute name="content" value="/WEB-INF/views/board/{1}.jsp" />
        <put-attribute name="title" value="게시판" />
    </definition>

    <!-- [2] 유실물 센터 용 Tiles 정의 -->
<definition name="kobus.lossCenter/*" template="/WEB-INF/views/inc/layout.jsp">
    <put-attribute name="header" value="/WEB-INF/views/inc/header.jsp" />
    <put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
            <put-attribute name="pageScript" value="/WEB-INF/views/board/personalScript.jsp" />
    <put-attribute name="content" value="/WEB-INF/views/lossCenter/{1}.jsp" />
    <put-attribute name="title" value="유실물 센터 안내" />
</definition>
    
